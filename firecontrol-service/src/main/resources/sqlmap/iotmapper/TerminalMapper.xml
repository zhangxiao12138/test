<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.firecontrol.mapper.iotmapper.TerminalMapper" >
    <resultMap id="BaseResultMap" type="com.firecontrol.domain.entity.TerminalEntity" >
        <!-- column 对应数据库字段， property对应实体bean的属性 -->
        <id column="id" property="id" jdbcType="VARCHAR" />
        <result column="hardware_id" property="hardwareId" jdbcType="VARCHAR" />
        <result column="add_time" property="addTime" jdbcType="TIMESTAMP" />
        <result column="first_assign_time" property="firstAssignTime" jdbcType="TIMESTAMP" />
        <result column="status" property="status" jdbcType="INTEGER" />
    </resultMap>


    <sql id="Base_Column_List" >
        id, hardware_id, add_time, first_assign_time, `status`
    </sql>

    <insert id="insert" parameterType="com.firecontrol.domain.entity.TerminalEntity" >
        insert into vod_connection_terminal_assign (id, hardware_id, add_time, first_assign_time, `status`)
        values (#{id,jdbcType=VARCHAR}, #{hardwareId,jdbcType=VARCHAR},
        now(), #{firstAssignTime,jdbcType=TIMESTAMP}, #{status,jdbcType=INTEGER}
        )
    </insert>

    <update id="update" parameterType="com.firecontrol.domain.entity.TerminalEntity">
        update vod_connection_terminal_assign
        <set>
            <if test="hardwareId != null">
                `hardware_id` = #{hardwareId,jdbcType=VARCHAR},
            </if>
            <if test="status != null">
                `status` = #{status,jdbcType=INTEGER},
            </if>
        </set>
        where id = #{id,jdbcType=VARCHAR}
    </update>

    <update id="updateHardwareId">
        update vod_connection_terminal_assign
        <set>
            first_assign_time = now(),
            <if test="hardwareId != null">
                `hardware_id` = #{hardwareId,jdbcType=VARCHAR},
            </if>
        </set>
        where id = #{terminalId,jdbcType=VARCHAR}
    </update>


    <select id="getAllTerminalList" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from vod_connection_terminal_assign
    </select>

    <select id="getAllTerminalIds" resultType="java.lang.String">
        select id from vod_connection_terminal_assign
    </select>

    <select id="getWeekTerminalCount" resultType="java.lang.Integer">
        select count(*) from vod_connection_terminal_assign where terminal_id like concat(#{prefix},'%')
    </select>


</mapper>
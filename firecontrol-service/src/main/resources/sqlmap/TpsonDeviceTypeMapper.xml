<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.firecontrol.mapper.TpsonDeviceTypeMapper">
    <resultMap id="BaseResultMap" type="com.firecontrol.domain.entity.TpsonDeviceType">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="system_type" jdbcType="INTEGER" property="systemType" />
    </resultMap>
    <sql id="Base_Column_List">
        id, name, system_type
    </sql>
    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from tb_server_device_type
        where id = #{id,jdbcType=BIGINT}
    </select>

    <select id="getDeviceTypeBySystemType" resultType="java.lang.Long">
        select id
        from tb_server_device_type
        where system_type = #{systemType}
    </select>

    <delete id="deleteById" parameterType="java.lang.Long">
        delete from tb_server_device_type
        where id = #{id,jdbcType=BIGINT}
    </delete>
    <insert id="insert" parameterType="com.firecontrol.domain.entity.TpsonDeviceType">
        insert into tb_server_device_type (id, name, system_type
        )
        values (#{id,jdbcType=BIGINT}, #{name,jdbcType=VARCHAR}, #{systemType,jdbcType=INTEGER}
        )
    </insert>

    <update id="updateByIdSelective" parameterType="com.firecontrol.domain.entity.TpsonDeviceType">
        update tb_server_device_type
        <set>
            <if test="name != null">
                name = #{name,jdbcType=VARCHAR},
            </if>
            <if test="systemType != null">
                system_type = #{systemType,jdbcType=INTEGER},
            </if>
        </set>
        where id = #{id,jdbcType=BIGINT}
    </update>

</mapper>